# Variables de entorno para producción
# =============================================

# Puerto del servidor (lo asigna el proveedor de hosting)
PORT=3000

# URL base de la aplicación (cambiar por URL de producción)
BASE_URL=https://tu-dominio.com

# CORS - Orígenes permitidos (separados por comas)
CORS_ALLOWED_ORIGINS=https://tu-dominio-frontend.com,https://admin.tu-dominio.com

# Base de datos
DATABASE_URL="mongodb+srv://usuario:password@cluster.mongodb.net/basededatos?retryWrites=true&w=majority"

# JWT Secret (generar uno seguro para producción)
JWT_SECRET=tu_jwt_secret_super_seguro_aqui

# JWT Expiration
JWT_EXPIRES_IN=24h

# MercadoPago
MERCADOPAGO_ACCESS_TOKEN=tu_access_token_de_mercadopago

# Cloudinary (para imágenes)
CLOUDINARY_CLOUD_NAME=tu_cloud_name
CLOUDINARY_API_KEY=tu_api_key
CLOUDINARY_API_SECRET=tu_api_secret

# Configuración de entorno
NODE_ENV=production

# Logging level
LOG_LEVEL=info

# Rate limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100
